doctype html
html
  head
    title= title
    style.
      body {
        font-family: Arial, sans-serif;
      }
      form {
        display: flex;
        flex-direction: column;
        width: 300px;
      }
      
      label {
        font-weight: bold;
        margin-top: 10px;
      }
      input {
        padding: 8px;
        margin-top: 5px;
        border: 1px solid #ccc;
        border-radius: 4px;
      }
      button {
        margin-top: 15px;
        padding: 10px;
        background-color: pink;
        color: white;
        border: none;
        border-radius: 4px;
        cursor: pointer;
      }
      form{
        display:flex;
        flex-direction:column 
        background-color:rgb(244, 14, 95);
        border:none

      }
      button:hover {
        background-color:rgb(244, 14, 95);
      }
      a {
        margin-top: 15px;
        display: inline-block;
        color: #0000EE;
        text-decoration: none;
        font-size: 16px;
      }
      a:hover {
        text-decoration: underline;
      }
  body
    h1 Update Custom Object
    form(action="/update-cobj" method="POST")
      label(for="name") Name:
      input(type="text" name="name" required)

      label(for="bio") Bio:
      textarea(name="bio" rows="3" required)

      label(for="game") Game:
      input(type="text" name="game" required)

      button(type="submit") Submit

    br
    a(href="/") Return to the homepage
